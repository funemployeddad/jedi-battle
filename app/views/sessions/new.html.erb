
<%= form_tag('/session', method: :post) do %>

  <div class="form-group">
    <%= label_tag(:name, "Jedi name:") %>

    <%= collection_select(:jedi, :name, Jedi.all, :name, :name, prompt: "Please select your Jedi name from this dropdown") %>
  </div>

  <div class="form-group">
    <%= label_tag(:password, "Your password:") %>
    <%= password_field_tag(:password, nil, class: "form-control") %>
  </div>

  <div class="actions">
    <%= submit_tag("Sign In") %>
  </div>

<% end %>
